<div class="f-clear"></div>
<div class="assign">
<h1>Course Assignments</h1>

<table>
<% @assignments.each do |assignment| %>
  <tr>
    <td><%= assignment.week %></td>
    <td><%= assignment.category %></td>
    <td><%= link_to assignment.title, [:admin, assignment] %></td>
    <td><% if assignment.assignment_id == 2 %><%= "Silver" %>
        <% elsif assignment.assignment_id == 3 %><%= "Gold" %>
        <% elsif assignment.assignment_id == 4 %><%= "Evening" %>
    <% end %></td>
    <td><%= link_to 'Edit', edit_admin_assignment_path(assignment), :class => "assign-edit-links" %></td>
    <td><%= link_to 'Delete', assignment, method: :delete, data: { confirm: 'Are you sure?' }, :class => "assign-edit-links" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Assignment', new_admin_assignment_path, :class =>
    "new-assign-link" %>
</div>

