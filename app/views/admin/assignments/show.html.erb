<div class="f-clear"></div>
<div class="assign">

  <h2><%= @assignment.week %></h2>

  <p>
    <b>Course:</b>
    <% if @assignment.assignment_id == 2 %><%= "Silver" %>
    <% elsif @assignment.assignment_id == 3 %><%= "Gold" %>
    <% elsif @assignment.assignment_id == 4 %><%= "Evening" %>
    <% end %>
  </p>

  <p>
    <b>Category:</b>
    <%= @assignment.category %>
  </p>

  <p>
    <b>Title:</b>
    <%= @assignment.title %>
  </p>

  <p>
    <b>Description:</b>
    <%= @assignment.description %>
  </p>

  <p>
    <b>Link:</b>
    <%= @assignment.link %>
  </p>

  <div class="div-links">
    <%= link_to 'Edit', edit_admin_assignment_path(@assignment) %> |
    <%= link_to 'Back', admin_assignments_path %>
  </div>
</div>
