<%= simple_form_for(@assignment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :category %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :link %>
    <%= f.select :assignment_id, [["Silver", 2], ["Gold", "3"], ["Evening", "4"]] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
